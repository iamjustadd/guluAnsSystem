/* pages/Home/Home.wxss */
.plusbutton{
  width: 40px;
  height: 40px;
}
.circlebutton{
  width: 50px;
  height: 50px;
}
.textareainform{
  padding: 5px;
  width: 95%;
  margin: 1%;
  background: #dcdcdc;
}
.img_list{
	width: 100vw;
	display: flex;
	display: -webkit-flex;
  padding: 2px;
  box-sizing: border-box;
  flex-wrap: wrap;
  -webkit-flex-wrap:wrap;
}
.img_list .img_li,
.addimg{
	width: 200rpx;
	height: 250rpx;
	border: 1px solid #999999;
  margin: 5rpx;
  flex-shrink: 0;
  -webkit-flex-shrink:0;
}
.addimg image{
	width: 150rpx;
	height: 150rpx;
	margin: 50rpx 25rpx;
}
.img_list .img_li image{
  width: 100%;
  height: 100%;
}

.labeloftype{
  font-size: 20px;
  margin-top: 5px;
  margin-left: 10px
}
.midbody{
  display: flex;
  flex-direction: raw;
  margin-top: 2px;
}
.textafterlabel{
  margin-top:5px;
  width:60%;
  position:fixed;
  right:10px
}
.textofgroup{
  margin-right: 5px;
  margin-top: 5px;
  position: relative;
}
#selectbutton{
  width:105px;
  margin-right: 10px;
}
.checkboxgroup{
  display: flex;
  flex-direction: row;
  padding: 1px;
  margin-top: 5px;
  margin-left: 2px;
}

#checkedpicker{
  width: 100%;
  height: 300px;
  bottom: 0px;
  position: fixed;
}
#complete{
  position: fixed;
  bottom: 50%;
  right:10px;
  width:100px;
}
.radiogroupafterlabel{
  margin-left: 5px;
  margin-top: 5px;
  padding: 2px;
}
.settag{
  display: flex;
  flex-direction: row;
  margin-left: 5%;
}